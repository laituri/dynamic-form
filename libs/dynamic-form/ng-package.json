{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist",

  "assets": [
    "src/lib/dynamic-form.scss",
    "src/lib/dynamic-form.d.ts",
    "src/lib/_styles/*.css"
  ],
  "whitelistedNonPeerDependencies": [
    "@simonwep/pickr",
    "js-datepicker",
    "quill",
    "turndown",
    "ngx-markdown",
    "@angular/cdk",
    "@angular/material"
  ],
  "lib": {
    "entryFile": "src/public-api.ts",
    "umdModuleIds": {
      "@simonwep/pickr": "Pickr",
      "js-datepicker": "datepicker",
      "quill": "Quill",
      "turndown": "turndown",
      "md-to-quill-delta": "mdToQuillDelta",
      "ngx-markdown": "ngxMarkdown",
      "turndown/lib/turndown.browser.umd.js": "turndown"
    }
  }
}
